<Application x:Class="_3DPrintingCostCalculator.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_3DPrintingCostCalculator.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#FFE8E8C8" />
            </Style>

            <Style TargetType="TextBlock" x:Key="DarkTextBlock">
                <Setter Property="Foreground" Value="#FF404850" />
            </Style>

            <Style TargetType="ComboBox" x:Key="DarkTextComboBox">
                <Setter Property="Foreground" Value="#FF404850" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
